!!! 5
%html
  %head
    %meta{ :charset       => "utf-8",
           :"http-equiv"  => "X-UA-Compatible",
           :content       => "IE=edge,chrome=1",
           :viewpoint     => "width=device-width" }

    %title== {{ page.title }}
    %link{ :rel => "stylesheet", :href => "/css/bootstrap.min.css", :media => "screen" }
    %link{ :rel => "stylesheet", :href => "/css/font-awesome.min.css", :media => "screen" }
    %link{ :rel => "stylesheet", :href => "/css/main.css", :media => "screen" }

  %body{ :data => { :spy => "scroll", :target => "#scroll-spy", :offset => "50" } }
    .navbar.navbar-inverse.navbar-fixed-top{ :role => "navigation" }
      .container#scroll-spy
        .navbar-header
          %button.navbar-toggle{ :type => "button", :data => { :toggle => "collapse", :target => ".navbar-ex1-collapse" } }
            %span.sr-only
              Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{ :href => "#hello" }
            == {{ site.name }}

        .collapse.navbar-collapse.navbar-ex1-collapse
          %ul.nav.navbar-nav
            %li.active
              %a{ :href => "#about-me" }
                About Me
            %li
              %a{ :href => "#projects" }
                Projects
            %li
              %a{ :href => "#work-experience" }
                Work Experience
            %li
              %a{ :href => "#resume" }
                Resume
            %li
              %a{ :href => "#contact-me" }
                Contact Me

    == {{ content }}

    .footer

    %script{ :src => "//code.jquery.com/jquery.js" }
    %script{ :src => "/js/bootstrap.min.js" }
